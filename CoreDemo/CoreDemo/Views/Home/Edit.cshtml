@model CoreDemo.Models.UserInfo

<div class="container">
    <form asp-action="Edit">
        <input type="hidden" asp-for="id" />
        <div class="form-group row">
            <label asp-for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="name">
            </div>
        </div>
        <div class="form-group row">
            <label for="age" class="col-sm-2 col-form-label">Age</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="age">
            </div>
        </div>
        <div class="form-group row">
            <label for="sex" class="col-sm-2 col-form-label">Sex</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="sex">
            </div>
        </div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary mb-2">保存</button>
        </div>
    </form>
</div>
